         base                   >= 4.6,
         sunroof-compiler       == 0.1,
         sunroof-server         == 0.1,
         Boolean                >= 0.2,
         semigroups             >= 0.9,
         data-default           >= 0.5
                  
    Main-is: Main.hs
    Hs-Source-Dirs: examples/browser-info
    Ghc-Options: -threaded
    default-language:    Haskell2010


